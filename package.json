{
  "name": "child-shell",
  "private": true,
  "description": "Node.js bindings for shell",
  "author": "Ran Cohen <rannn505@outlook.com>",
  "homepage": "https://rannn505.github.io/child-shell/",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf **/dist **/tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf coverage .eslintcache ./**/node_modules",
    "format": "prettier --write '**/*.{js,ts,md}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,ts,md}' --ignore-path .gitignore",
    "lint": "eslint . --cache --fix --ext js,ts,md --ignore-path .gitignore",
    "lint:check": "eslint . --cache --ext js,ts,md --ignore-path .gitignore",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "tsc --build",
    "build:watch": "npm run build -- --watch",
    "types:check": "npm run build -- --dry",
    "start": "npm run build && ts-node examples",
    "prepublishOnly": "npm run types:check && npm run format:check && npm run lint:check && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --ext js,ts --ignore-path .gitignore",
      "prettier --check --ignore-path .gitignore"
    ]
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "devEngines": {
    "node": ">= 8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.9.7"
  }
}
