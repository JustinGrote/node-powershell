{
  "name": "child-shell",
  "private": true,
  "description": "Node.js bindings for shell",
  "author": "Ran Cohen <rannn505@outlook.com>",
  "homepage": "https://rannn505.github.io/child-shell/",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf **/dist **/tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf coverage .eslintcache ./**/node_modules",
    "format": "prettier --write '**/*.{js,ts,md}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,ts,md}' --ignore-path .gitignore",
    "lint": "eslint . --cache --fix --ext js,ts,md --ignore-path .gitignore",
    "lint:check": "eslint . --cache --ext js,ts,md --ignore-path .gitignore",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "types:check": "npm run build -- --dry",
    "start": "npm run build && ts-node examples",
    "prepublishOnly": "npm run types:check && npm run format:check && npm run lint:check && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -c lint-staged.config.js"
    }
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "devEngines": {
    "node": ">= 8.0.0",
    "npm": ">=7.5.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-markdown": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "lint-staged": {
    "*.{js,ts,md}": "eslint --cache --fix"
  }
}
