{
  "name": "child-shell",
  "private": true,
  "description": "Node.js bindings for shell",
  "author": "Ran Cohen <rannn505@outlook.com>",
  "homepage": "https://rannn505.github.io/child-shell/",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "devEngines": {
    "node": ">=v14.16.0",
    "npm": ">=7.6.0"
  },
  "scripts": {
    "clean": "npx rimraf **/build",
    "clean:cache": "npx rimraf .eslintcache **/tsconfig.tsbuildinfo coverage ./**/node_modules",
    "clean:all": "run-p -ln clean clean:cache",
    "format": "prettier --write '**/*.{js,ts,md}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,ts,md}' --ignore-path .gitignore",
    "lint": "eslint . --cache --fix --ext js,ts,md --ignore-path .gitignore",
    "lint:check": "eslint . --cache --ext js,ts,md --ignore-path .gitignore",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "types:check": "npm run build -- --dry",
    "start": "cd packages/examples & npm start",
    "prepublishOnly": "run-p -ln types:check format:check lint:check test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -c lint-staged.config.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-markdown": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
